@model BookStore.Web.Models.Dto.BookDto

<form asp-action="DeleteBook">
    <input asp-for="BookId" hidden />
    <br />
    <div class="container border p-3">
        <h1 class="text-info">Delete Book</h1>
        <hr />
        <div class="row">
            <div class="col-2">
                <label asp-for="Name" class="pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" disabled class="form-control" />           
            </div>
            <div class="col-2">
                <label asp-for="CategoryName" class="pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CategoryName" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="Description" class="pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Description" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="ImageUrl" class="pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ImageUrl" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="Price" class="pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Price" disabled class="form-control" />
            </div>
            <div class="col-5 offset-2">
                <a asp-action="BookIndex" class="btn btn-primary form-control">Back to list</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>
