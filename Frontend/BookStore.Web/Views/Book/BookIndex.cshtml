@using System.Globalization;
@model IEnumerable<BookStore.Web.Models.Dto.BookDto>
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Book List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="CreateBook" class="btn btn-outline-primary"><i class="fas fa-plus"></i> Create New Book</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category Name</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.CategoryName</td>                
                    <td>@(item.Price.ToString("c", CultureInfo.GetCultureInfo("en-NG")))</td>
                    <td><a asp-action="EditBook" class="btn btn-success" asp-route-bookId="@item.BookId"><i class="fas fa-edit"></i></a>
                    <a asp-action="DeleteBook" class="btn btn-danger" asp-route-bookId="@item.BookId"><i class="fas fa-trash"></i></a></td>
                </tr>
            }
        </tbody>
    </table>
</div>